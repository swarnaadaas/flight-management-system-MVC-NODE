<div class="container">
    <h1 class="text-center" style="color: white;">Update Flight Details</h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post">
                <div>
                    <label for="flight_name">Flight Name</label>
                    <input type="text" name="flight_name" id="flight_name" class="form-control" value="{{data.dataValues.flight_name}}">
                </div>
                <div>
                    <label for="flight_type">Flight Type</label>
                    <input type="text" name="flight_type" id="flight_type" class="form-control" value="{{data.dataValues.flight_type}}">
                </div>
                <div>
                    <label for="flight_capacity">Flight Capacity</label>
                    <input type="text" name="flight_capacity" id="flight_capacity" class="form-control" value="{{data.dataValues.flight_capacity}}">  
                </div>
                
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Save Updates</button>
                </div>
            </form>
        </div>
    </div>
</div>